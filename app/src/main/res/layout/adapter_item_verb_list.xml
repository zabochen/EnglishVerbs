<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="3dp"
        app:cardCornerRadius="0dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/adapterItemVerbList_relativeLayout_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="18dp">

                <!-- Verb Infinitive -->
                <TextView
                    android:id="@+id/adapterItemVerbList_textView_verbInfinitive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/blogger_sans_bold"
                    android:text="arise - "
                    android:textAllCaps="true"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Verb Translation -->
                <TextView
                    android:id="@+id/adapterItemVerbList_textView_verbInfinitiveTranscription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/adapterItemVerbList_textView_verbInfinitive"
                    android:layout_toRightOf="@id/adapterItemVerbList_textView_verbInfinitive"
                    android:fontFamily="@font/blogger_sans_bold"
                    android:text="возникать, появлятьсяы"
                    android:textAllCaps="true"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <!-- Verb Image -->
            <ImageView
                android:id="@+id/adapterItemVerbList_imageView_verbImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/adapterItemVerbList_relativeLayout_header"
                android:scaleType="centerCrop"
                android:src="@drawable/arise" />

            <!-- Verb Example -->
            <TextView
                android:id="@+id/adapterItemVerbList_textView_verbExample"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/adapterItemVerbList_imageView_verbImage"
                android:layout_margin="18dp"
                android:lineSpacingExtra="2dp"
                android:text="Doubts arose in his mind - У него возникли сомнения"
                android:textSize="16sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>